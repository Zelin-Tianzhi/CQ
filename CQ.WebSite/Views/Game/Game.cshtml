<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/Game/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    if (data != null && data !== "") {
                        $("#GameName").text(data.GameModel.F_ProductName);
                        $("#notify").text(data.GameModel.F_Explain);
                        $(".text-li").append(data.GameModel.F_Rule);
                        var _html = "";
                        $.each(data.ImgList,
                            function(i, o) {
                                _html += '<div class="swiper-slide"><img src="' + o.F_Img + '"></div>';
                            });
                        $(".swiper-wrapper").html(_html);
                    }
                },
                error: function (msg) {
                }
            });
        }
    });
</script>
<script type="text/javascript" src="/Content/js/idangerous.swiper.min.js"></script>
<script>
    var mySwiper = $('.swiper-container').swiper({
        loop: false,
        grabCursor: true,
        paginationClickable: true,
        slidesPerView: 4
    });
    $('.arrow-left').on('click', function(e){
        e.preventDefault()
        var swiper = $(this).siblings('.swiper-container').data('swiper');
        swiper.swipePrev();
    });
    $('.arrow-right').on('click', function(e){
        e.preventDefault()
        var swiper = $(this).siblings('.swiper-container').data('swiper');
        swiper.swipeNext();
    });
</script>

