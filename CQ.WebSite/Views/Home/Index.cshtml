<script>
    layui.use(['carousel', 'form'], function(){
        var carousel = layui.carousel
            ,form = layui.form;
        //常规轮播
        carousel.render({
            elem: '#test1',
            arrow: 'always',
            width: '710px',
            height: '532px'
        });
    });
    $(function() {
        GetList();
    });

    function GetList() {
        var keyValue = 0;
        $.ajax({
            url: "/News/GetHomeNews",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                var _html = "";
                $.each(data, function (i, o) {
                    var type = o.F_ArticleType == 1 ? "新闻" : "公告";
                    _html += '<li>';
                    _html += '<a href="/News/News?keyValue=' + o.F_Id + '" target="_blank">[ ' + type + ' ]' + o.F_ArticleTitle + '</a>';
                    _html += '</li>';
                });
                $("#NewList").prepend(_html);
            },
            error: function (msg) {
                alert(msg.statusText);
            }
        });
        $.ajax({
            url: "/Game/GetHotList",
            data: { keyValue: 0 },
            dataType: "json",
            async: false,
            success: function (data) {
                var _html = "";
                $.each(data, function (i, o) {
                    _html += '<li>';
                    _html += '  <a href="/Game/Game?keyValue=' + o.F_Id + '" title="' + o.F_ProductName + '" class="app-icons">';
                    _html += '    <img src="http://183.131.69.236:11010'+o.F_IcoImg+'" alt="">';
                    _html += '    <h4>' + o.F_ProductName + '</h4>';
                    _html += '  </a>';
                    _html += '</li>';
                });
                $("#GameList").prepend(_html);
            },
            error: function (msg) {
                alert(msg.statusText);
            }
        });
    }

</script>