        </ul>
    </div>

</div>
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/News/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $(".news_title").text(data.F_ArticleTitle);
                    $(".news_time").text(data.F_PublishTime.split(' ')[0]);
                    $(".news_content").html(data.F_ArticleContent);
                },
                error: function (msg) {
                    $(".news_title").text("文章不存在");
                    $(".news_time").text("");
                    $(".news_content").html("");
                }
            });
        }
    });
</script>

