
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {

    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/UserManage/IpConfig/SubmitForm",
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">IP(MAC)地址</th>
                    <td class="formValue">
                        <input id="IPAddress" name="IPAddress" type="text" class="form-control required" placeholder="IP(MAC)地址" />
                    </td>

                </tr>
                <tr>
                    <th class="formTitle">IP类型</th>
                    <td class="formValue">
                        <select id="IPType" name="IPType" class="form-control">
                            <option value="0">白名单</option>
                            <option value="1">黑名单</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">是否MAC</th>
                    <td class="formValue">
                        <select id="IsMac" name="IsMac" class="form-control">
                            <option value="false">否</option>
                            <option value="true">是</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

