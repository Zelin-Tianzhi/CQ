
@{
    ViewBag.Title = "DisableUser";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var account = $.request('account');
    $(function () {
        $("#F_Account").val(account);
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["hj"] = $("#F_DisableTime").val();
        postData["keyValue"] = account;
        postData["message"] = $("#F_djyy").val();
        $.submitForm({
            url: "/UserManage/User/SubmitDisabled",
            param: postData,
            success: function () {
                $.loading(false);
            }
        })
    }
</script>
<form id="form1">
    <div style="padding-top: 30px; margin-right: 40px;">
        <table class="form">
            <tr>
                <th class="formTitle">账户</th>
                <td class="formValue">
                    <input id="F_Account" name="F_Account" readonly type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">禁用时间</th>
                <td class="formValue">
                    <select id="F_DisableTime" name="F_DisableTime" class="form-control">
                        <option value="1">1天</option>
                        <option value="3">3天</option>
                        <option value="7">1周</option>
                        <option value="1month">1个月</option>
                        <option value="3month">3个月</option>
                        <option value="6month">6个月</option>
                        <option value="1year">1年</option>
                        <option value="10year">10年</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">禁用原因</th>
                <td class="formValue">
                    <input id="F_djyy" name="F_djyy" type="text" class="form-control required" />
                </td>
            </tr>
        </table>
    </div>
</form>


